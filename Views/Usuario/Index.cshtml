@model IEnumerable<net.Models.Usuario>
@{
    ViewData["Title"] = "Gestión de usuarios";
}

<div class="text-center mb-4">
    <h2 class="fw-bold">Gestión de usuarios</h2>
</div>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Avatar</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>DNI</th>
            <th>Rol</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>
                    <img src="@(string.IsNullOrEmpty(u.Avatar) ? "/img/default-avatar.png" : u.Avatar)"
                         class="rounded-circle"
                         style="width:40px;height:40px;object-fit:cover;" />
                </td>
                <td>@u.Nombre @u.Apellido</td>
                <td>@u.Email</td>
                <td>@u.Dni</td>
                <td>
                    @if (u.Rol == (int)net.Models.Usuario.Roles.Administrador)
                    {
                        <span class="badge bg-primary">Administrador</span>
                    }
                    else
                    {
                        <span class="badge bg-info text-dark">Empleado</span>
                    }
                </td>
                <td>
                    @if (u.Estado == 1)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </td>
                <td>
                    <a asp-action="Edicion" asp-route-id="@u.UsuarioId" class="btn btn-sm btn-outline-warning me-1">
                        <i class="fa-solid fa-pen-to-square"></i> Editar
                    </a>

                    @if (u.Estado == 1)
                    {
                        <a asp-action="Baja" asp-route-id="@u.UsuarioId" class="btn btn-sm btn-outline-danger">
                            <i class="fa-solid fa-user-slash"></i> Desactivar
                        </a>
                    }
                    else
                    {
                        <a asp-action="Reactivar" asp-route-id="@u.UsuarioId" class="btn btn-sm btn-outline-success">
                            <i class="fa-solid fa-user-check"></i> Activar
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll("a[href*='Usuario/Baja'], a[href*='Usuario/Reactivar']").forEach(link => {
                link.addEventListener("click", function (e) {
                    e.preventDefault();
                    const url = this.getAttribute("href");

                    let accion = url.includes("Baja") ? "desactivar" : "activar";

                    Swal.fire({
                        title: "¿Está seguro?",
                        text: `Esto va a ${accion} este usuario.`,
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#3085d6",
                        cancelButtonColor: "#d33",
                        confirmButtonText: "Sí, confirmar",
                        cancelButtonText: "Cancelar"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = url;
                        }
                    });
                });
            });
        });
    </script>
}