@model net.Models.Propietario
@{
    ViewData["Title"] = "Detalle de propietario";
    /* var Inmuebles = ViewBag.Inmuebles as IEnumerable<net.Models.Inmueble>; */
}

<div class="text-center mb-4">
    <h2 class="fw-bold">Detalle del propietario</h2>
</div>

<div class="card shadow-lg border-0 mb-4">
    <div class="card-header bg-dark text-white">
        <i class="fa-solid fa-user"></i> Información personal
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <p><strong>Nombre:</strong> @Model.Nombre</p>
                <p><strong>Apellido:</strong> @Model.Apellido</p>
                <p><strong>DNI:</strong> @Model.Dni</p>
            </div>
            <div class="col-md-6">
                <p><strong>Teléfono:</strong> @Model.Telefono</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Dirección:</strong> @Model.Direccion</p>
                <p>
                    <strong>Estado:</strong>
                    @if (Model.Estado == 1)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </p>
            </div>
        </div>
    </div>
</div>

