<h4>Inmuebles asociados</h4>
@if (Model.Inmuebles != null && Model.Inmuebles.Any())
{
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Latitud</th>
                <th>Longitud</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var inmueble in Model.Inmuebles)
        {
            <tr>
                <td>@inmueble.Latitud</td>
                <td>@inmueble.Longitud</td>
                <td>@inmueble.Precio</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No hay inmuebles registrados para este propietario.</p>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fa-solid fa-arrow-left"></i> Volver al listado
    </a>
</div>
