@model net.Models.Inmueble
@{
    ViewData["Title"] = "Detalle de inmueble";
}

<div class="text-center mb-4">
    <h2 class="fw-bold">Detalle del inmueble</h2>
</div>

<div class="card shadow-lg border-0 mb-4">
    <div class="card-header bg-dark text-white">
        <i class="fa-solid fa-building"></i> Información del inmueble
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <p><strong>Dirección:</strong> @Model.Direccion</p>
                <p><strong>Latitud:</strong> @Model.Latitud</p>
                <p><strong>Longitud:</strong> @Model.Longitud</p>
                <p><strong>Ambientes:</strong> @Model.Ambientes</p>
                <p><strong>Precio:</strong> $ @Model.Precio</p>
            </div>
            <div class="col-md-6">
                <p><strong>Propietario:</strong> @($"{Model.Propietario?.Nombre} {Model.Propietario?.Apellido} DNI {Model.Propietario?.Dni}")</p>
                <p><strong>Uso:</strong> @Model.UsoInmueble?.UsoValor</p>
                <p><strong>Tipo:</strong> @Model.TipoInmueble?.Valor</p>
                <p>
                    <strong>Estado:</strong>
                    @if (Model.Estado == 1)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </p>
            </div>
        </div>
    </div>
</div>

<h4>Contratos asociados</h4>
@if (Model.Contratos != null && Model.Contratos.Any())
{
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Inquilino</th>
                <th>Fecha inicio</th>
                <th>Fecha fin</th>
                <th>Precio</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var contrato in Model.Contratos)
        {
            <tr>
                <td>@($"{contrato.Inquilino?.Nombre} {contrato.Inquilino?.Apellido} DNI {contrato.Inquilino?.Dni}")</td>
                <td>@contrato.FechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@contrato.FechaFin.ToString("dd/MM/yyyy")</td>
                <td>@contrato.Precio.ToString("C0", new System.Globalization.CultureInfo("es-AR"))</td>
                <td>@(contrato.Estado == 1 ? "Activo" : "Inactivo")</td>
                <td>
                    <a href="/Contrato/Detalle/@contrato.ContratoId" title="Ver detalle" class="me-2"><i class="fa-solid fa-eye"></i></a>
                    @if (contrato.Estado == 1)
                    {
                        <a href="/Contrato/Edicion/@contrato.ContratoId" title="Editar" class="me-2"><i class="fa-solid fa-pen-to-square"></i></a>
                        
                        <a href="#" data-url="/Contrato/Eliminar/@contrato.ContratoId" class="text-danger anular me-2" title="Anular contrato"><i class="fa-solid fa-ban"></i></a>
                    }
                    else
                    {
                        <a href="#" data-url="/Contrato/Activar/@contrato.ContratoId" class="text-success activar me-2" title="Reactivar contrato"><i class="fa-solid fa-rotate-left"></i></a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No hay contratos registrados para este inmueble.</p>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fa-solid fa-arrow-left"></i> Volver al listado
    </a>
</div>

@section Scripts {
    <script>
        $(function () {
            $('.anular').on('click', function (e) {
                e.preventDefault();
                const url = $(this).data('url');
                Swal.fire({
                    title: "¿Anular contrato?",
                    text: "El contrato quedará inactivo",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "Anular",
                    cancelButtonText: "Cancelar"
                }).then((r) => { if (r.isConfirmed) window.location.href = url; });
            });

            $('.activar').on('click', function (e) {
                e.preventDefault();
                const url = $(this).data('url');
                Swal.fire({
                    title: "¿Reactivar contrato?",
                    text: "El contrato volverá a estar vigente",
                    icon: "question",
                    showCancelButton: true,
                    confirmButtonText: "Reactivar",
                    cancelButtonText: "Cancelar"
                }).then((r) => { if (r.isConfirmed) window.location.href = url; });
            });
        });
    </script>
}