@using net.Models
@model net.Models.Inmueble
@{
    ViewData["Title"] = "Edición de inmueble";
    int id = Model == null ? 0 : Model.InmuebleId;
    @*var Propietarios = (IList<Propietario>)ViewBag.Propietarios;
    var Usos = (IList<UsoInmueble>)ViewBag.Usos;
    var Tipos = (IList<TipoInmueble>)ViewBag.Tipos;
    Ya no hacen falta porque estoy usando los SelectList*@
}

<div class="text-center mb-4">
    <h2 class="fw-bold">@((id == 0) ? "Crear nuevo inmueble" : "Editar inmueble")</h2>
</div>

<div class="row">
    <div class="col-md-10 offset-md-1">
        <form asp-controller="Inmueble" asp-action="Guardar" method="post" id="guardarForm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="InmuebleId" value="@id" />

            <div class="row">
                <div class="col-md-6">

                    <div class="mb-3">
                        <label class="form-label">Propietario</label>
                        <select asp-for="IdPropietario" class="form-select" asp-items="ViewBag.Propietarios"></select>
                        <span asp-validation-for="IdPropietario" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Direccion" class="form-label"></label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Latitud" class="form-label"></label>
                        <input asp-for="Latitud" class="form-control" />
                        <span asp-validation-for="Latitud" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Longitud" class="form-label"></label>
                        <input asp-for="Longitud" class="form-control" />
                        <span asp-validation-for="Longitud" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">

                    <div class="mb-3">
                        <label class="form-label">Uso</label>
                        <select asp-for="IdUso" class="form-select" asp-items="ViewBag.Usos"></select>
                        <span asp-validation-for="IdUso" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Tipo</label>
                        <select asp-for="IdTipo" class="form-select" asp-items="ViewBag.Tipos"></select>
                        <span asp-validation-for="IdTipo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Ambientes" class="form-label"></label>
                        <input asp-for="Ambientes" class="form-control" />
                        <span asp-validation-for="Ambientes" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Precio" class="form-label"></label>
                        <input asp-for="Precio" class="form-control" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Volver al listado
                </a>
                <button type="submit" id="guardar" class="btn btn-primary">
                    <i class="fa-solid fa-floppy-disk"></i> Guardar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            const btnEnviar = document.getElementById("guardar");
            btnEnviar.addEventListener("click", (event) => {
                event.preventDefault();

                if (!$("#guardarForm").valid()) {
                    return;//no mostrar SweetAlert si hay errores
                }

                Swal.fire({
                    title: "¿Guardar cambios?",
                    icon: "question",
                    showDenyButton: true,
                    showCancelButton: true,
                    confirmButtonText: "Guardar",
                    denyButtonText: "No guardar"
                }).then((result) => {
                    if (result.isConfirmed) {
                        document.getElementById("guardarForm").submit();
                    }
                });
            });

            $('#IdPropietario').select2({
                placeholder: "Seleccione un propietario",
                allowClear: true
            });

            
        });
    </script>
}