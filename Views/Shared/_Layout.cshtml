<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inmobiliaria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InmobiliariaMelian.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.5/css/dataTables.dataTables.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Inmobiliaria</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Propietario" asp-action="Index">Propietarios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Inquilino" asp-action="Index">Inquilinos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Inmueble" asp-action="Index">Inmuebles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Contrato" asp-action="Index">Contratos</a>
                            </li>
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Usuario" asp-action="Index">
                                        <i class="fa-solid fa-users"></i> Usuarios
                                    </a>
                                </li>
                            }
                        }

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item ms-auto">
                                <a class="nav-link text-dark" asp-controller="Usuario" asp-action="Login">
                                    <i class="fa-solid fa-right-to-bracket"></i> Acceder
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown ms-auto">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userMenu"
                                role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @{
                                        var avatar = User.FindFirst("Avatar")?.Value;
                                        var avatarUrl = string.IsNullOrEmpty(avatar) || !avatar.Contains("/")
                                            ? "/img/default-avatar.png"
                                            : avatar;
                                    }
                                    <img src="@avatarUrl" class="rounded-circle me-2"
                                        style="width:30px;height:30px;object-fit:cover;" />
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Usuario" asp-action="Perfil">
                                            <i class="fa-solid fa-user"></i> Perfil
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Usuario" asp-action="Logout">
                                            <i class="fa-solid fa-right-from-bracket"></i> Salir
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 Inmobiliaria Melian
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://kit.fontawesome.com/f2c4cc416a.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/2.1.5/js/dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let error = "@TempData["Error"]";
            let mensaje = "@TempData["Mensaje"]";

            if (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: error
                });
            }

            if (mensaje) {
                Swal.fire({
                    icon: 'success',
                    title: 'Éxito',
                    text: mensaje,
                    timer: 2500,
                    showConfirmButton: false
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
